<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".profile.ProfileActivity">
    <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="0dp"
            android:layout_height="256dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/img_woman"
            android:scaleType="centerCrop"/>
    <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Beer Pasranan"
            android:padding="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProfilePic"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <TextView
            android:id="@+id/tvProfileDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum sim dolor amet"
            android:padding="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProfileName"
            android:textSize="14dp"/>
    <TextView
            android:id="@+id/tvProfileLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="How people feel about you?"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProfileDesc"
            android:textSize="14dp"/>
    <RatingBar
            android:id="@+id/rbProfileRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:isIndicator="true"
            android:progressTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tvProfileLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:id="@+id/btnProfileLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_button_backgroud"
            app:layout_constraintTop_toBottomOf="@id/rbProfileRating"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>